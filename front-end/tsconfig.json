{
  "compilerOptions": {
    "target": "ES2020",        // 或者 "ESNext"
    "module": "ESNext",        // 关键点：必须设为 ESNext、Node16 等，不能是 CommonJS
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
